<% layout("layout/boilerplate") %>
    <div class="row">
        <h1 class="mb-5 border-bottom pb-3">Please sign up</h1>
        <div class="col-6 offset-3">
            <form action="/register" method="POST" class="validated-form shadow border rounded-3 p-5" novalidate style="width: 35rem;">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" minlength="3" maxlength="15" required>
                    <div class="invalid-feedback">
                        Username required
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="invalid-feedback">
                        Email required
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" minlength="8"
                        maxlength="30" required>
                    <div class="invalid-feedback">
                        Password required, minimum 8 characters
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>